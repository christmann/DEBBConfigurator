{% set ownaction = path('debb_config_default_importdebbcomponentsxml') %}
{% set ownbackhref = ownaction %}
{% set ownsavetext = 'import.%name%' | trans({' %name%': '', '%name% ': ''}) %}
{% extends "DebbManagementBundle::form.html.twig" %}
{% form_theme form "DebbManagementBundle::form_theme.html.twig" %}

{% block title %}{{ 'import.%name%' | trans({"%name%": 'DEBBComponents'}) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
        'bundles/debbconfig/css/jquery-ui.min.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@DebbConfigBundle/Resources/public/js/jquery-ui.min.js'
        '@DebbConfigBundle/Resources/public/js/help.js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
	<div class="row-fluid">
		<div class="span12" style="text-align: center;">
			{{ form_widget(form) }}
		</div>
	</div>
    <div class="row-fluid">
        <div class="accordion">
            <h3>{{ 'Zip Structure' | trans }}</h3>
            <div style="display: none;">
                {{ 'Ziparchive' | trans }}<br >
                &nbsp;|&nbsp;&nbsp;&nbsp;Node_Example_1.xml<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;Node_Example_2.xml<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;NodeGroup_Example_1.xml<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;NodeGroup_Example_2.xml<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;PLMXML_Test_1.xml<br />
                &nbsp;|<br />
                &nbsp;+---img<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Node_Example_1.jpeg<br />
                &nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Node_Example_2.jpeg<br />
                &nbsp;|<br />
                &nbsp;\---objects<br />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Node_Example_1.wrl<br />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Node_Example_2.stl<br /><br /><br />
                {{ 'help.zip' | trans | nl2br | raw }}
            </div>
        </div>
    </div>
{% endblock %}
